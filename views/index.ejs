<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
    <div class="col-12 col-lg-5">
        <img src="/images/hero-image.png" alt="Cooking With Node.js" width="607" height="510" class="d-block mx-lg-auto img-fluid" loading="lazy">
    </div>

    <div class="col-12 col-lg-7">
        <h1 class="display-5 fw-bold mb-3">Huge selection of delicios recipe ideas</h1>
        <p class="lead">Explore our huge selection of delicious recipe ideas including; easy desserts, delicious vegan and vegetarian dinner ideas, gorgeous pasta recipes, quick bakes, family-friendly meals and gluten-free recipes.</p>
    </div>

    <div class="d-gird gap-2 d-md-flex justify-content-md-start mt-0">
        <a href="/explore-lastest" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Explore Latest</a>
        <a href="/random-recipes" class="btn btn-outline-secondary btn-lg px-4 me-md-2">Show Random</a>
    </div>
</div>

<!-- Category -->
<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">

    <% if (categories) { %>
        <% categories.forEach(function(category, index) { %>
            <a href="/categories/<%= category.name %>" class="col text-center category__link">
                <div class="category__image shadow">
                    <img src="/images/<%= category.image %>" alt="<%= category.name %>" loading="lazy">
                </div>
                <div class="pt-1"><%= category.name %></div>
            </a>
        <% }) %>
    <% } %>
    <a href="/categories" class="col text-center category__link">
        <div class="category__image shadow">
            <img src="/images/view-all.jpg" alt="View All Categories" loading="lazy">
        </div>
        <div class="pt-1">View All</div>
    </a>
</div>

<!-- Lastest Recipes -->
<section class="pd-4 pt-4">
    <div class="d-flex mb-2 align-items-center">
        <h2>Lastest Recipes</h2>
        <a href="/explore-lastest" class="ms-auto">View More</a>
    </div>

    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
        <% if (recipes) { %>
            <% recipes.lastest.forEach((recipe, index) => { %>
                <a href="/recipe/<%= recipe._id %>" class="col text-center category__link">
                    <div class="category__image category__image--large shadow">
                        <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %>" loading="lazy">
                    </div>
                    <div class="pt-1"><%= recipe.name %></div>
                </a>
            <% }) %>
        <% } else { %>
            <p>No items found</p>
        <% } %> 
    </div>
</section>

<!-- Recipes by Category -->
<% if (recipes) { %>
    <% recipes.RecipeCountries.forEach((recipeCountry, index) => { %>
        <section class="pd-4 pt-4">
            <div class="d-flex mb-2 align-items-center">
                <h2><%= recipeCountry[0].category %></h2>
                <a href="/explore-<%= recipeCountry[0].category %>" class="ms-auto">View More</a>
            </div>

            <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
                <% if (recipeCountry) { %>
                    <% recipeCountry.forEach(function(recipe, index) { %>
                        <a href="/recipe/<%= recipe._id %>" class="col text-center category__link">
                            <div class="category__image category__image--large shadow">
                                <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %>" loading="lazy">
                            </div>
                            <div class="pt-1"><%= recipe.name %></div>
                        </a>
                    <% }) %>
                <% } %>
            </div>
        </section>
    <% }) %> 
<% } else { %>
    <p>No items found</p>
<% } %> 

<!-- Submit Recipe -->
<section class="px-4 py-5 my-5 text-center">
    <img src="/images/publish-recipe.png" class="d-block mx-auto mb-4 img-fluid" alt="Publish your recipe for FREE today" width="566" height="208">
    <h1 class="display-5 fw-bold">Publish your recipe for FREE today</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead mb-4">Publish your Recipe in front of thousands of people for free.</p>
        <div class="d-gird grap-2 d-sm-flex justify-content-sm-center">
            <a href="/submit-recipe" class="btn btn-primary btn-dark btn-lg">Submit Recipe</a>
        </div>
    </div>
</section>